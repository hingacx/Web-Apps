    <!-- Update a Customer's Reward Status -->
    <form>
        <fieldset class='fields'>
        <legend>Update a Customer's Reward:</legend>
            <table class='tbl'>
                <tr>
                    <th></th>
                    <th>Customer</th>
                    <th>Reward</th>
                </tr>
                <tr>
                    <th></td>
                    <td><select name='customer_ID' id='theCustomer' required>
                        {{#each list}}
                        <option value="{{this.customer_ID}}">{{this.first_name}} {{this.last_name}}</option>
                        {{/each}}
                        </select></td>
                    <td><select name='reward_ID' id='theReward' required>
                        <option value='blah'>None</option>
                        {{#each array}}
                        <option value="{{this.reward_ID}}">{{this.reward_name}}</option>
                        {{/each}}
                        </select></td>
                    <td><input type='submit' id='updateCustReward' class='submitButton'></td>
                </tr>
            </table>
        </fieldset>
    </form>

    <!-- Update a Customer's Info -->
    <form action='/updatecustomers' method='POST'>
        <fieldset class='fields'>
        <legend>Update a Customer's Info:</legend>
            <table class='tbl'>
                <tr>
                    <th></th>
                    <th>Customer</th>
                </tr>
                <tr>
