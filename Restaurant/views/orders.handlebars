<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="items.css">
        <title>Items</title>
    </head>

    <body>
        <section id='upperblock'>
        <h1>Interaction with Orders Here</h1>
        <p class='headingPara'>Create, Read and Delete Orders</p>
            <div class='nav'>
                <p class='navPara'>Navigation</p>
                <div id='buttonholder'>
                <form>
                <button type='submit' id='homeButton' formaction='/'>Home</button>
                <button type="submit" id="customersButton" formaction='/customers'>Customers</button>
                <button type="submit" id="rewardsButton" formaction='/rewards'>Rewards</button>
                <button type="submit" id="ordersButton" formaction='/orders'>Orders</button>
                <button type="submit" id="billsButton" formaction='/bills'>Bills</button>
                <button type="submit" id="itemsButton" formaction='/items'>Items</button>
                </form>
                </div>
            </div>
        </section><br>

    
        <!-- Add a Order -->
        <div id='middleblock'>
        <p class='para'></p>
        <form action='/orders' method='POST'>
            <fieldset class='fields'>
            <legend>Create a Order Entry:</legend>
                <table class='tbl'>
                    <tr>
                        <th></th>
                        <th>Customer</th>
                        <th>Bill</th>
                        <th>Reward Used</th>
                    </tr>
                    <tr>
                        <th></th>
                        <td><select name='customer_ID' id='theCustomer' required>
                            {{#each list}}
                            <option value="{{this.customer_ID}}">{{this.first_name}} {{this.last_name}}</option>
                            {{/each}}
                            </select></td>
                        <td><select name='bill_ID' id='theCustomerBill' required>
                            {{#each array}}
                            <option value="{{this.bill_ID}}">{{this.amount}}</option>
                            {{/each}}
                            </select></td>
                        <td><input type='radio' id='rewardTrue' name='reward_used' value='1'>
                            <label for='rewardTrue'>Yes</label>
                            <input type='radio' id='rewardFalse' name='reward_used' value='0' checked>
                            <label for='rewardFalse'>No</label>
                        </td>
                        <td><input type='submit' id='addOrder' class='submitButton'></td>
                    </tr>
                </table>
            </fieldset>
        </form>


        <!-- Delete a Order -->
        <form>
            <fieldset class='fields'>
            <legend>Delete a Order:</legend>
                <table class='tbl'>
                    <tr>
                        <th></th>
                        <th>Order</th>
                    </tr>
                    <tr>
                        <th></th>
                        <td><select name='order_ID' id='deleteOrder_ID' required>
                            {{#each thing}}
                            <option value="{{this.order_ID}}">{{this.order_ID}}</option>
                            {{/each}}
                            </select></td>
                        <td><input type='submit' id='deleteOrder' class='submitButton'></td>
                    </tr>
                </table>
            </fieldset>
        </form><br>
    </div>


    <!-- Show Orders -->
    <section id='bottomblock'>
        <form>
            <fieldset class='fields'>
            <legend>Current Orders are Displayed Here:</legend>
                <table class='tbl'>
                    <tr>
                        <th>Order</th>
                        <th>Customer</th>
                        <th>Bill</th>
                        <th>Reward Used</th>
                    </tr>
                    <tbody>
                    {{#each stuff}}
                    <tr>
                        <td>{{this.order_ID}}</td>
                        <td>{{this.first_name}} {{this.last_name}}</td>
                        <td>{{this.amount}}</td>
                        <td>{{this.reward_used}}</td>
                    </tr>
                    {{/each}}
                </table>
             <!--  <input type='submit' value='Display Orders' class='submitButton' formaction='/showorders'> -->
            </fieldset>
        </form><br>
    </section>

    <script src="orders.js"></script>
    </body>
</html>